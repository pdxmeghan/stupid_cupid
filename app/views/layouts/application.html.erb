<!DOCTYPE html>
<html>
<head>
  <title>StupidCupid</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <form class="navbar-form navbar-left" role="search" action="/searches" method="get">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Search" name="query">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>


  <% if current_user %>
   Logged in as <%= link_to current_user.name, user_path(current_user) %> |
    <%= link_to "Query", new_question_path %> |
    <%= link_to "Home", questions_path %> |
    <%= link_to "Log Out", logout_path %>

  <% else %>
    <%= link_to "Sign Up", signup_path %> or
   <%= link_to "Log In", login_path %>
<% end %>
<%= flash[:notice] %>
<%= flash[:alert] %>
<%= yield %>

</body>
</html>
